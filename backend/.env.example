# Environment Variables for Textbook RAG Chatbot

# Qdrant Vector Database Configuration
QDRANT_API_KEY="your-qdrant-api-key-here"
QDRANT_HOST="your-qdrant-host-url"
QDRANT_PORT=6333

# Cohere API Configuration (for embeddings)
COHERE_API_KEY="your-cohere-api-key-here"

# OpenRouter API Configuration (for LLM)
OPENROUTER_API_KEY="your-openrouter-api-key-here"

# LLM Provider Configuration
LLM_PROVIDER="openrouter"  # Options: "openrouter", "openai", "gemini"
MODEL_NAME="mistralai/devstral-2512:free"

# Application Configuration
SESSION_TTL_HOURS=24
MAX_HISTORY_TURNS=10
TEXTBOOK_MODE_ENABLED=true
ACADEMIC_TONE_ENFORCEMENT=true
REFERENCE_REQUIRED=true
POLITE_LANGUAGE_HANDLING=true
MAX_RESPONSE_LENGTH=2000
FALLBACK_MESSAGE="The requested information is not available in the current knowledge base."

# Book Configuration
BOOK_URL="your-book-url-here"

# Processing Configuration
CHUNK_SIZE=800
CHUNK_OVERLAP=100
MAX_PAGES=1000
RATE_LIMIT_DELAY=1.0

# Logging Configuration
LOG_LEVEL="INFO"